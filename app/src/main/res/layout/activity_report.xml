<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:calendarViewShown="false"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ReportActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ReportActivity_addr_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="118dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="234dp"
        android:layout_height="78dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ReportActivity_detail_textView"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="세부위치"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="193dp" />

        <EditText
            android:id="@+id/ReportActivity_detail_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="178dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="76dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ReportActivity_date_textView"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:text="발견일자"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="282dp" />

        <DatePicker
            android:id="@+id/ReportActivity_date_datePicker"
            android:layout_width="284dp"
            android:layout_height="81dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="136dp"
            android:layout_marginTop="256dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ReportActivity_photo_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진첨부"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="427dp" />

        <ImageView
            android:id="@+id/ReportActivity_uploadphoto_imageView"
            android:layout_width="176dp"
            android:layout_height="154dp"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="367dp"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/ReportActivity_uploadPhoto_Button"
            android:layout_width="84dp"
            android:layout_height="41dp"
            android:text="사진첨부"
            tools:layout_editor_absoluteX="311dp"
            tools:layout_editor_absoluteY="480dp" />
    </LinearLayout>

    <Button
        android:id="@+id/ReportActivity_report_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신고등록하기"
        tools:layout_editor_absoluteX="257dp"
        tools:layout_editor_absoluteY="643dp" />

</LinearLayout>